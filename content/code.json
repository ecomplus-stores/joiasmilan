{
  "css": "/* APX TOPBAR */\n.topbar a > *{\n    line-height:14px;\n    color: #000000;\n    font-size: 13px;\n}\n.topbar a{\n    display:flex;\n    gap:5px;\n    text-align:center;\n}\n.topbar{\n    padding: 10px 0;\n    border-bottom: 2px solid #F2A1B2;\n    background-color: #ffffff;\n}\n@media(min-width:990px){\n    .topbar .row-flex{\n        display:flex;\n        justify-content:space-between;\n        align-items:center;\n    }\n}\n@media(max-width:990px){\n    .topbar a{width:100%;justify-content: center;min-width:100%;}\n}",
